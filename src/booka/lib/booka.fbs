namespace booka.fb;

table Strings {
  data:string;
  offsets:[uint32];
}

table BinaryData {
  data:[byte];
  offsets:[uint32];
}

enum ActionType : uint8 {
  Image,
  Music,
  Text,
}

struct ShowTextAction {
  character_index:uint32;
  phrase_index:uint32;
}

struct Action {
  type:ActionType;
  index:uint32;
}

table Booka {
  image_names:Strings;
  image_data:BinaryData;
  music_names:Strings;
  music_data:BinaryData;
  character_names:Strings;
  phrases:Strings;
  show_text_actions:[ShowTextAction];
  story:[Action];
}

root_type Booka;
